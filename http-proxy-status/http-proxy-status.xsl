<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet 
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:iana="http://www.iana.org/assignments"
  xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">

  <xsl:import href="../_support/iana-registry.xsl" />

  <xsl:template name="iana:record_header">
    <xsl:choose>
      <xsl:when test="@id = 'http-proxy-status-parameters'">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Reference</th>
        </tr>
    </xsl:when>
      <xsl:when test="@id = 'http-proxy-error-types'">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Extra Parameters</th>
          <th>Recommended HTTP Status Code</th>
          <th>Response Only Generated by Intermediaries</th>
          <th>Reference</th>
          <th>Notes</th>
        </tr>
    </xsl:when>
  </xsl:choose>
  </xsl:template>

  <xsl:template match="iana:record">
    <xsl:choose>
      <xsl:when test="../@id = 'http-proxy-status-parameters'">
        <tr>
          <td><xsl:value-of select="iana:name"/></td>
          <td><xsl:apply-templates select="iana:description"/></td>
          <td><xsl:apply-templates select="iana:xref"/></td>
        </tr>
      </xsl:when>
      <xsl:when test="../@id = 'http-proxy-error-types'">
        <tr>
          <td><xsl:value-of select="iana:name"/></td>
          <td><xsl:apply-templates select="iana:description"/></td>
          <td><xsl:apply-templates select="iana:extra"/></td>
          <td><xsl:apply-templates select="iana:code"/></td>
          <td><xsl:apply-templates select="iana:response"/></td>
          <td><xsl:apply-templates select="iana:xref"/></td>
          <td><xsl:apply-templates select="iana:notes"/></td>
        </tr>
      </xsl:when>
    </xsl:choose>
  </xsl:template>

</xsl:stylesheet>
