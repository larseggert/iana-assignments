<?xml version='1.0'?>
<grammar xmlns="http://relaxng.org/ns/structure/1.0"
  datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes"
  ns="http://www.iana.org/assignments">

  <include href="../_support/iana-registry.rng"/>

  <start>
    <element name="registry">
      <ref name="registryMeta"/>
      
      <!-- Differentiated Services Field Codepoints -->
      
      <element name="registry">
        <ref name="registryMeta"/>
        <zeroOrMore>
          <element name="record">
            <optional><attribute name="date"><ref name="genericDate"/></attribute></optional>
            <element name="pool"><data type="positiveInteger"/></element>
            <element name="space">
              <data type="string">
                <param name="pattern">[x01]{6}</param>
              </data>
            </element>
            <element name="registration_rule"><text/></element>
            <optional><element name="note"><text/></element></optional>
          </element>
        </zeroOrMore>
        
        <!-- Pool 1 Codepoints -->
        
        <element name="registry">
          <ref name="registryMeta"/>
          <zeroOrMore>
            <element name="record">
              <optional><attribute name="date"><ref name="genericDate"/></attribute></optional>
              <element name="name"><text/></element>
              <element name="space">
                <data type="string">
                  <param name="pattern">[01]{6}</param>
                </data>
              </element>
              <element name="decimal_space"><text/></element>
              <ref name="references"/>
            </element>
          </zeroOrMore>
        </element>
        
        <!-- Pool 3 Codepoints -->
        
        <element name="registry">
          <ref name="registryMeta"/>
          <zeroOrMore>
            <element name="record">
              <optional><attribute name="date"><ref name="genericDate"/></attribute></optional>
              <element name="name"><text/></element>
              <element name="space">
                <data type="string">
                  <param name="pattern">[01]{6}</param>
                </data>
              </element>
              <element name="decimal_space"><text/></element>
              <ref name="references"/>
            </element>
          </zeroOrMore>
        </element>
      </element>
      
      <!-- ECN Field (Bits 6-7) -->
      
      <element name="registry">
        <ref name="registryMeta"/>
        <zeroOrMore>
          <element name="record">
            <optional><attribute name="date"><ref name="genericDate"/></attribute></optional>
            <element name="value"><ref name="binary"/></element>
            <element name="description"><ref name="richText"/></element>
            <ref name="references"/>
          </element>
        </zeroOrMore>
        <ref name="footnotes"/>
      </element>
        
      
      <ref name="people"/>
    </element>
  </start>

</grammar>
