<?xml version='1.0' encoding='UTF-8'?>
<?xml-stylesheet type="text/xsl" href="auth-namespaces.xsl"?>
<?xml-model href="auth-namespaces.rng" schematypens="http://relaxng.org/ns/structure/1.0" ?>
<registry xmlns="http://www.iana.org/assignments" id="auth-namespaces">
  <title>Dynamic Host Configuration Protocol (DHCP) Authentication Option Name Spaces</title>
  <category>Authentication Option Name Spaces</category>
  <created>2001-05-15</created>
  <updated>2024-06-27</updated>

  <registry id="auth-namespaces-1">
    <title>Protocol Name Space Values</title>
    <xref type="rfc" data="rfc3118"/>
    <registration_rule>IETF Review</registration_rule>
    <record>
      <value>0</value>
      <description>configuration token</description>
      <xref type="rfc" data="rfc3118"/>
    </record>
    <record>
      <value>1</value>
      <description>delayed authentication</description>
      <xref type="rfc" data="rfc3118"/>
    </record>
    <record>
      <value>2</value>
      <description>Delayed Authentication (Obsolete)</description>
      <xref type="rfc" data="rfc8415"/>
    </record>
    <record>
      <value>3</value>
      <description>Reconfigure Key</description>
      <xref type="rfc" data="rfc8415"/>
    </record>
    <record date="2024-06-27">
      <value>4</value>
      <description>Split-horizon DNS</description>
      <xref type="draft" data="RFC-ietf-add-split-horizon-authority-14"/>
    </record>
  </registry>

  <registry id="auth-namespaces-2">
    <title>Algorithm Name Space Values</title>
    <xref type="rfc" data="rfc3118"/>
    <registration_rule>IETF Review</registration_rule>
    <registry id="auth-namespaces-3">
      <title>configuration token (0) Algorithms</title>
      <xref type="rfc" data="rfc3118"/>
      <registration_rule>IETF Review</registration_rule>
      <record>
        <value>0</value>
        <description>configuration token</description>
        <xref type="rfc" data="rfc3118"/>
      </record>
    </registry>

    <registry id="auth-namespaces-4">
      <title>delayed authentication (1) Algorithms, Delayed Authentication (2) Algorithms, and Reconfigure Key (3) Algorithms</title>
      <xref type="rfc" data="rfc3118"/>
      <registration_rule>IETF Review</registration_rule>
      <record>
        <value>1</value>
        <description>HMAC-MD5</description>
        <xref type="rfc" data="rfc3118"/>
        <xref type="rfc" data="rfc8415"/>
      </record>
    </registry>
  </registry>

  <registry id="auth-namespaces-5">
    <title>RDM Name Space Values</title>
    <xref type="rfc" data="rfc3118"/>
    <registration_rule>IETF Review</registration_rule>
    <record>
      <value>0</value>
      <description>use of a monotonically increasing value</description>
      <xref type="rfc" data="rfc3118"/>
      <xref type="rfc" data="rfc8415"/>
    </record>
  </registry>
  
  <people/>
</registry>
