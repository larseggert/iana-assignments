<?xml version='1.0' encoding='UTF-8'?>
<?xml-stylesheet type="text/xsl" href="rdap-json-values.xsl"?>
<?xml-model href="rdap-reverse-search-mapping.rng" schematypens="http://relaxng.org/ns/structure/1.0" ?>
<registry xmlns="http://www.iana.org/assignments" id="rdap-reverse-search-mapping">
  <title>RDAP Reverse Search Mapping</title>
  <category>Registration Data Access Protocol (RDAP)</category>
  <created>2023-10-02</created>
  <updated>2023-10-04</updated>
  
  <registry id="rdap-reverse-search-mapping">
    <title>RDAP Reverse Search Mapping</title>
    <xref type="draft" data="RFC-ietf-regext-rdap-reverse-search-25"/>
    <registration_rule>Specification Required</registration_rule>
    <expert>Unassigned</expert>

    <record date="2023-10-02">
      <property>fn</property>
      <path>$.entities[*].vcardArray[1][?(@[0]=='fn')][3]</path>
      <searchable>domains, nameservers, entities</searchable>
      <related>entity</related>
      <registrant><xref type="person" data="IETF"/></registrant>
      <xref type="draft" data="RFC-ietf-regext-rdap-reverse-search-25"/>
    </record>

    <record date="2023-10-02">
      <property>handle</property>
      <path>$.entities[*].handle</path>
      <searchable>domains, nameservers, entities</searchable>
      <related>entity</related>
      <registrant><xref type="person" data="IETF"/></registrant>
      <xref type="draft" data="RFC-ietf-regext-rdap-reverse-search-25"/>
    </record>
    
    <record date="2023-10-02">
      <property>email</property>
      <path>$.entities[*].vcardArray[1][?(@[0]=='email')][3]</path>
      <searchable>domains, nameservers, entities</searchable>
      <related>entity</related>
      <registrant><xref type="person" data="IETF"/></registrant>
      <xref type="draft" data="RFC-ietf-regext-rdap-reverse-search-25"/>
    </record>

    <record date="2023-10-02">
      <property>role</property>
      <path>$.entities[*].roles</path>
      <searchable>domains, nameservers, entities</searchable>
      <related>entity</related>
      <registrant><xref type="person" data="IETF"/></registrant>
      <xref type="draft" data="RFC-ietf-regext-rdap-reverse-search-25"/>
    </record>

  </registry>
  
  <people>
    <person id="IETF">
      <name>IETF</name>
      <uri>mailto:iesg&amp;ietf.org</uri>
    </person>
  </people>
</registry>
