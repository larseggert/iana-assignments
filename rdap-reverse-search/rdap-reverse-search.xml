<?xml version='1.0' encoding='UTF-8'?>
<?xml-stylesheet type="text/xsl" href="rdap-json-values.xsl"?>
<?xml-model href="rdap-reverse-search.rng" schematypens="http://relaxng.org/ns/structure/1.0" ?>
<registry xmlns="http://www.iana.org/assignments" id="rdap-reverse-search">
  <title>RDAP Reverse Search</title>
  <category>Registration Data Access Protocol (RDAP)</category>
  <created>2023-10-02</created>
  <updated>2024-05-02</updated>
  
  <registry id="rdap-reverse-search">
    <title>RDAP Reverse Search</title>
    <xref type="rfc" data="rfc9536"/>
    <registration_rule>Specification Required</registration_rule>
    <expert>Andy Newton, Scott Hollenbeck</expert>

    <record date="2023-10-02">
      <property>fn</property>
      <description>The server supports the domain/nameserver/entity search 
        based on the full name (a.k.a. formatted name) of an associated 
        entity</description>
      <searchable>domains, nameservers, entities</searchable>
      <related>entity</related>
      <registrant><xref type="person" data="IETF"/></registrant>
      <xref type="rfc" data="rfc9536"/>
    </record>

    <record date="2023-10-02">
      <property>handle</property>
      <description>The server supports the domain/nameserver/entity search 
        based on the handle of an associated entity</description>
      <searchable>domains, nameservers, entities</searchable>
      <related>entity</related>
      <registrant><xref type="person" data="IETF"/></registrant>
      <xref type="rfc" data="rfc9536"/>
    </record>
    
    <record date="2023-10-02">
      <property>email</property>
      <description>The server supports the domain/nameserver/entity search based 
        on the email address of an associated entity</description>
      <searchable>domains, nameservers, entities</searchable>
      <related>entity</related>
      <registrant><xref type="person" data="IETF"/></registrant>
      <xref type="rfc" data="rfc9536"/>
    </record>

    <record date="2023-10-02">
      <property>role</property>
      <description>The server supports the domain/nameserver/entity search based 
        on the role of an associated entity</description>
      <searchable>domains, nameservers, entities</searchable>
      <related>entity</related>
      <registrant><xref type="person" data="IETF"/></registrant>
      <xref type="rfc" data="rfc9536"/>
    </record>

  </registry>
  
  <people>
    <person id="IETF">
      <name>IETF</name>
      <uri>mailto:iesg&amp;ietf.org</uri>
    </person>
  </people>
</registry>
